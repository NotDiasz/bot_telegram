// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BotConfig {
  id              String            @id @default(cuid())
  botToken        String
  intervalMinutes Int
  isActive        Boolean           @default(false)
  sendMode        String            @default("random") // "random" ou "sequential"
  currentIndex    Int               @default(0) // Para modo sequencial
  groups          Group[]
  collections     MessageCollection[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model MessageCollection {
  id        String    @id @default(cuid())
  name      String
  order     Int       @default(0)
  messages  Message[]
  configId  String
  config    BotConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}

model Message {
  id           String            @id @default(cuid())
  content      String
  order        Int               @default(0)
  collectionId String
  collection   MessageCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
}

model Group {
  id         String    @id @default(cuid())
  chatId     String
  name       String
  configId   String
  config     BotConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  lastSentAt DateTime?
}
